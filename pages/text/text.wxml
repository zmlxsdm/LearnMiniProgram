<!-- 1、text基本使用 -->
<text>hello world \n</text>
<text>你好小程序 \n</text>

<!-- 2.selecttable:true -->
<!-- 默认情况下text中的文本长安是不能选中的 -->
<text selectable="{{true}}">hello zml \n</text>
<!-- 推荐使用，使代码更加简洁 -->
<text selectable>hello 小程序</text>


<!-- 3、space:决定文本空格的大小 -->
<!-- ensp：半个中文字符大小 -->
<!-- emsp:一个中文女子赴大小 -->
<text>\n\n</text>
<text> hello xcx \n</text>
<text space="nbsp">hello xcx \n</text>
<text space="ensp">hello xcx \n</text>
<text space="emsp">hello xcx \n</text>
<text>\n\n</text>


<!-- 4、decode属性：是否解码文本 -->
<text>5 &gt; 3 \n</text>
<text decode="{{true}}">5 &gt; 3 \n</text>
<text decode>5 &gt; 3</text>
